@model IEnumerable<OtoSoft.Plant.Entities.DTOs.Herb.HerbDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                Complaints
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@item.Image" width="100" height="100" />
                </td>
                <td>

                    @foreach (var complaint in item.ComplaintDto)
                    {
                        <a asp-controller="Complaint" asp-action="Detail"  asp-route-id="@complaint.Id">@complaint.Name</a>
                    }

                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
